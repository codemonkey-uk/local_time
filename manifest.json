{
    "manifest_version": 2,
    "name": "Localise Timezones",
    "description": "Converts times to your local time zone",
    "version": "0.3",
    "icons": { 
        "128": "icon-128.png",
        "512": "icon.svg"
    },
    "options_ui": {
      "page": "options.html",
      "browser_style": true,
      "chrome_style": true
    },
    "permissions": [
      "activeTab", "storage"
    ],    
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ]
}