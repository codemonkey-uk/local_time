{
"manifest_version": 2,
    "name": "Localise Timezones",
    "description": "Converts times to your local time zone",
    "version": "0.2.2",
    "icons": { 
        "128": "icon-128.png",
        "512": "icon.svg"
    },
    "permissions": [
      "activeTab"
    ],    
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ]
}